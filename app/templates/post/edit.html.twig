{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Post edit'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="post_container container">

    <h1>{{ 'Post edit'|trans({'%id%': post.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('post_edit', {id: post.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'edit'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('post_index') }}" class="btn btn-link">
            {{ 'Back to list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}