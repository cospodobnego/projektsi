{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Create post'|trans }}
{% endblock %}

{% block body %}
    <div class="post_container container">

    <h1>{{ 'Create post'|trans }}</h1>
    {{ form_start(form, { method: 'POST', action: url('post_create') }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('post_index') }}" class="btn btn-link">
            {{ 'Back to list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}