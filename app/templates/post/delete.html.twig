{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Delete Post'|trans({'%id%': post.id|default('')}) }}
{% endblock %}

{% block body %}
    <h1>{{ 'Delete Post'|trans({'%id%': post.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'DELETE', action: url('post_delete', {id: post.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'delete'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('post_index') }}" class="btn btn-link">
            {{ 'Back to list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
{% endblock %}