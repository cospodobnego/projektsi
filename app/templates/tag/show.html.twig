{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Tag details'|trans({'%id%': tag.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="tag_container container">

    <h1>{{ 'Tag details'|trans({'%id%': tag.id|default('')}) }}</h1>
    {% if tag is defined and tag|length %}
        <dl class="dl-horizontal">
            <dt>{{ 'ID'|trans }}</dt>
            <dd>{{ tag.id }}</dd>
            <dt>{{ 'Name'|trans }}</dt>
            <dd>{{  tag.name }}</dd>

        </dl>
        <p>
            <a href="{{ url('tag_index') }}" title="{{ 'Back to list'|trans }}">
                {{ 'Back to list'|trans }}
            </a>
        </p>
    {% else %}
        <p>
            {{ 'Item not found'|trans }}
        </p>
    {% endif %}
    </div>
{% endblock %}