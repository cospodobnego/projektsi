{% extends 'base.html.twig' %}

{% block title %}
    {{ 'Category edit'|trans({'%id%': category.id|default('')}) }}
{% endblock %}

{% block body %}
    <div class="category_container container">

    <h1>{{ 'Category edit'|trans({'%id%': category.id|default('')}) }}</h1>
    {{ form_start(form, { method: 'PUT', action: url('category_edit', {id: category.id}) }) }}
    {{ form_widget(form) }}
    <div class="form-group row float-sm-right">
        <input type="submit" value="{{ 'save'|trans }}" class="btn btn-primary" />
    </div>
    <div class="form-group row float-sm-left">
        <a href="{{ url('category_index') }}" class="btn btn-link">
            {{ 'Back to list'|trans }}
        </a>
    </div>
    {{ form_end(form) }}
    </div>
{% endblock %}